<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="GridGeomPostBuild" AfterTargets="Build">
    <ItemGroup>
      <_FilesToCopyGridGeom Include="$(MSBuildThisFileDirectory)..\runtimes\win-x64\native\*"/>      
    </ItemGroup>
    <Copy SourceFiles="@(_FilesToCopyGridGeom)" DestinationFolder="$(OutDir)\%(RecursiveDir)" SkipUnchangedFiles="true"/>    
  </Target>
  
  <Target Name="GridGeomClean" AfterTargets="Clean">
    <ItemGroup>
      <_OriginalFilesGridGeom Include="$(MSBuildThisFileDirectory)..\runtimes\win-x64\native\*"/>
      <_FilesToCleanGridGeom Include="$(OutDir)\%(_OriginalFilesGridGeom.RecursiveDir)%(_OriginalFilesGridGeom.FileName)%(_OriginalFilesGridGeom.Extension)"/>      
    </ItemGroup>
    <Delete Files="@(_FilesToCleanGridGeom)"/>    
  </Target>
</Project>